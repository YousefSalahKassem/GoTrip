<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checktrip">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/myframe"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/seaa"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16.3dp"
                    android:layout_height="21.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/passenger"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.3dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passenger Name"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:text="himate"
                        android:id="@+id/errorr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16.3dp"
                    android:layout_height="21.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phoneicon"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.3dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16.3dp"
                    android:layout_height="21.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/homeicon"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.3dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/b1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25.7dp"
                    android:layout_height="19.3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/b2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.3dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25.7dp"
                    android:layout_height="19.3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/calender"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29.6dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="23.3dp"
                    android:layout_height="23.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/timetime"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textColor="#c5c5c5"
                        android:textSize="11.7sp" />
                    <TextView
                        android:id="@+id/edtdeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16.3dp"
                    android:layout_height="24.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/childer"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kids"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/kids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16.3dp"
                    android:layout_height="24.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sit"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/classs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="24.3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/passport" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.3dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passport"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/passenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:textStyle="bold"
                        android:ems="10"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29.6dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="23.3dp"
                    android:layout_height="23.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/moneyicon"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="11.7sp"
                        android:textColor="#c5c5c5"/>
                    <TextView
                        android:id="@+id/mytextprice"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:ems="10"
                        android:textStyle="bold"
                        android:text="Ticket Price"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/mymoney"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:ems="10"
                        android:textStyle="bold"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="-19dp"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/tax"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:ems="10"
                        android:textStyle="bold"
                        android:text="Vat"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/mytax"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:ems="10"
                        android:textStyle="bold"
                        android:text="14%"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="-19dp"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/totalmoney"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:ems="10"
                        android:textStyle="bold"
                        android:text="Total Amount"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/totalprice"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:textColor="#4b4949"
                        android:ems="10"
                        android:textStyle="bold"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="-19dp"
                        android:maxLines="1" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="92.6dp"
        android:layout_height="43dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16.7dp"
        android:background="@drawable/half_blue_roundshape">

        <TextView
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Confrim"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>