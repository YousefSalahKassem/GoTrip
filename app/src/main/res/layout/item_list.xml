<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ContentDescription"
        android:elevation="4dp"
        android:background="@drawable/shadow"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.3dp"
        android:layout_marginLeft="11.7dp"
        android:layout_marginRight="13dp"
        android:orientation="horizontal">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/nameplanee"
    android:textSize="14.3sp"
    android:layout_weight="1"
    android:textColor="#1faef3"
    android:gravity="left"
    android:text=""/>
        <TextView
            android:id="@+id/pricee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.3sp"
            android:layout_weight="1"
            android:textColor="#1faef3"
            android:gravity="right"
            android:text=""
            />


    </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_marginTop="10.3dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#efefef"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.7dp"
            android:layout_marginLeft="11dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/placefrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:textColor="#4b4949"
                    android:text=""
                    />


                <TextView
                    android:id="@+id/timego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:textColor="#a9a9a9"
                    android:layout_marginTop="3dp"
                    android:text="1200"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="#4b4949"
                    android:text=""
                    />


                <TextView
                    android:id="@+id/chooseclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:textColor="#a9a9a9"
                    android:text="Direct"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="13.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/placeto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:textColor="#4b4949"
                    android:text=""
                    />


                <TextView
                    android:id="@+id/timere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:textColor="#a9a9a9"
                    android:layout_marginTop="3dp"
                    android:text=""

                    />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/blue_airplane"/>

    </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>