<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".forgetpassword">
   <TextView
       android:layout_gravity="center"
       android:layout_width="350dp"
       android:layout_height="200dp"
       android:layout_marginTop="250dp"
       android:textSize="25dp"
       android:textColor="#000"
       android:textStyle="bold"
       android:gravity="center"
       android:text="We will mail you a link after when you provide email and click the send button please click on that link to reset your password"/>
    <EditText
        android:id="@+id/sendemail"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/white_roundshape"
        android:textStyle="bold"
        android:textColor="#000"

        android:hint="  Write your email here"/>
    <Button
        android:id="@+id/confirmsendemail"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_roundshape"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:gravity="center"
        android:text="Send Email"/>
        
</LinearLayout>